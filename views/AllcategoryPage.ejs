<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>
        <div id="admin-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <h1 class="admin-heading">All Categories</h1>
                    </div>
                    <div class="col-md-2">
                        <a class="add-new" href="http://localhost:8000/admin/Addcategory">add category</a>
                    </div>
                    <div class="col-md-12">
                        <table class="content-table">
                            <thead>
                                <th>S.No.</th>
                                <th>Category Name</th>
                                <th>No. of Posts</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </thead>
                            <tbody>
                                <% categoryBypostCount.forEach((data,i)=> { %>
                                    <tr>
                                        <td class='id'>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= data._id %>
                                        </td>
                                        <td>
                                            <%= data.count %>
                                        </td>
                                        <td class='edit'><a href='update-category.php'><i class='fa fa-edit'></i></a>
                                        </td>
                                        <td class='delete'><a href='delete-category.php'><i
                                                    class='fa fa-trash-o'></i></a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <ul class='pagination admin-pagination'>
                            <li class="active"><a>1</a></li>
                            <li><a>2</a></li>
                            <li><a>3</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <script src="/js/admin.js"></script>
</body>

</html>