<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>
        <div id="admin-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <h1 class="admin-heading">All Categories</h1>
                    </div>
                    <div class="col-md-2">
                        <a class="add-new" href="http://localhost:8000/admin/Addcategory">add category</a>
                    </div>
                    <div class="col-md-12">
                        <table class="content-table">
                            <thead>
                                <th>S.No.</th>
                                <th>Category Name</th>
                                <th>No. of Posts</th>
                            </thead>
                            <tbody>
                                <% if (locals.data.collectionData) { %>
                                    <% data.collectionData.forEach(category=> { %>
                                        <tr>
                                            <td class='id'>
                                                <%= data.pageCounter++ %>
                                            </td>
                                            <td>
                                                <%= category._id %>
                                            </td>
                                            <td>
                                                <%= category.count %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                        <ul class='pagination admin-pagination'>
                            <% if (data.totalPages && data.totalDocs> data.limit ) { %>
                                <% for( let i=1; i <=data.totalPages; ++i ) { %>
                                    <li>
                                        <a href="?page=<%= i %>" class="btn btn-primary">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>