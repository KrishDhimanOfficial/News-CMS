<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News CMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>

        <div id="admin-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <h1 class="admin-heading">All Users</h1>
                    </div>
                    <div class="col-md-2">
                        <a class="add-new" href="http://localhost:8000/admin/adduser">Add user</a>
                    </div>
                    <div class="col-md-12">
                        <table class="content-table">
                            <thead>
                                <th>S.No.</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </thead>
                            <tbody id="UserBody">
                                <% if (locals.data.collectionData) { %>
                                    <% data.collectionData.forEach(user=> { %>
                                        <tr>
                                            <td class='id'>
                                                <%= data.pageCounter++ %>
                                            </td>
                                            <td>
                                                <%= user.username %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <%= user.role %>
                                            </td>
                                            <td>
                                                <a href="http://localhost:8000/admin/user/<%= user._id %>/edit">Edit</a>
                                            </td>
                                            <td>
                                                <a href="http://localhost:8000/admin/user/<%= user._id %>">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                            </tbody>
                        </table>
                        <ul class='pagination admin-pagination'>
                            <% const paginate=locals.data %>
                                <% if (paginate.totalPages && paginate.totalDocs> paginate.limit ) { %>
                                    <% for( let i=1; i <=paginate.totalPages; ++i ) { %>
                                        <li><a href="?page=<%= i %>" class="btn btn-primary">
                                                <%= i %>
                                            </a></li>
                                        <% } %>
                                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        <%- include('partials/footer') %>
</body>

</html>