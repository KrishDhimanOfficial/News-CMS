<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News CMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="main-content">
        <div class="container">
            <!-- header -->
            <%- include('partials/header') %>
                <!-- header -->
                <!-- navabar -->
                <%- include('partials/navbar') %>
                    <!-- navabar -->
                    <div class="row mt-4">
                        <div class="col-md-8">
                            <!-- post-container -->
                            <div class="post-container">
                                <% if (post && post.length > 0) { %>
                                    <% post.forEach(post => { %>
                                         <div class="post-content"> 
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <a class="post-img" href="http://localhost:8000/post/singlepost/<%= post._id %>"><img src=http://localhost:8000/uploads/<%= post.image %> alt="" /></a>
                                                </div>
                                                <div class="col-md-8">
                                                    <div class="inner-content clearfix">
                                                        <h3><a href='http://localhost:8000/post/singlepost/<%= post._id %>'><%= post.title %></a></h3>
                                                        <div class="post-information">
                                                            <span>
                                                                <i class="fa fa-tags" aria-hidden="true"></i>
                                                                <a href='category.php'><%= post.categorie %></a>
                                                            </span>
                                                            <span>
                                                                <i class="fa fa-user" aria-hidden="true"></i>
                                                                <a href='author.php'>author</a>
                                                            </span>
                                                            <span>
                                                                <i class="fa fa-calendar" aria-hidden="true"></i>
        
                                                            <a href='http://localhost:8000/post/singlepost/post/<%= post._id %>'> <%= post.formattedDate %></a>
                                                            </span>
                                                        </div>
                                                        <p class="description">
                                                            <%= post.description %>
                                                        </p>
                                                        <a class='read-more pull-right' href="http://localhost:8000/post/singlepost/<%= post._id %>">read more</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } %>
                                <ul class='pagination'>
                                </ul>
                            </div>
                            <!-- /post-container -->

                        </div>
                        <div id="sidebar" class="col-md-4">
                            <!-- sidebar -->
                            <%- include('partials/sidebar') %>
                                <!-- sidebar -->
                        </div>
                    </div>
        </div>

    </div>
    <script src="/js/script.js"></script>
</body>

</html>